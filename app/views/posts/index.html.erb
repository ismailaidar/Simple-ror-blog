
<div class="my-4 mx-4">

  <div class="row">
    <% @posts.each do |post| %>
      <div class="card col-3 m-1" style="width: 18rem;">
        <%= image_tag post.image, class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <%= link_to 'View Post', post, class: 'btn btn-primary' %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row text-center">
    <%= will_paginate @clients, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>